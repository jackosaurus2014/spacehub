  keyObligations          String    // JSON array
  commercialImplications  String    // JSON array
  enforcementMechanism    String
  usImplementation        String
  sourceUrl               String

  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  @@index([type])
  @@index([usRatified])
}

